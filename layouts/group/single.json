{
  "members": [
    {{ range $person := where (where .Site.Pages "Type" "person") "Kind" "page" }}
      {{ if $person.Params.affiliations }}
        {{ range $affiliation := $person.Params.affiliations }}
          {{ if eq $affiliation $.Page.BaseFileName }}
             {{ $person.BaseFileName | jsonify }},
          {{ end }}
        {{ end }}
      {{ end }}
    {{ end }}
    null
  ],
  {{ partial "page.json" . }}
}