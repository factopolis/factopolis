{
  {{ if .Params.web }}"web": {{ .Params.web | jsonify }},{{ end }}
  {{ if .Params.wikipedia }}"wikipedia": {{ .Params.wikipedia | jsonify }},{{ end }}
  {{ if .Params.twitter }}"twitter": {{ .Params.twitter | jsonify }},{{ end }}
  {{ if .Params.facebook }}"facebook": {{ .Params.facebook | jsonify }},{{ end }}
  {{ if .Params.instagram }}"instagram": {{ .Params.instagram | jsonify }},{{ end }}
  {{ if .Params.snapchat }}"snapchat": {{ .Params.snapchat | jsonify }},{{ end }}
  {{ if .Params.youtube }}"youtube": {{ .Params.youtube | jsonify }},{{ end }}
  {{ if .Params.medium }}"medium": {{ .Params.medium | jsonify }},{{ end }}
  {{ if .Params.flickr }}"flickr": {{ .Params.flickr | jsonify }},{{ end }}

  "members": [
    {{ range $person := where (where .Site.Pages "Type" "person") "Kind" "page" }}
      {{ if $person.Params.affiliations }}
        {{ range $affiliation := $person.Params.affiliations }}
          {{ if eq $affiliation $.Page.BaseFileName }}
             {{ $person.BaseFileName | jsonify }},
          {{ end }}
        {{ end }}
      {{ end }}
    {{ end }}
    null
  ],

  "name": {{ .Title | jsonify }},
  "id": {{ .BaseFileName | jsonify }}
}